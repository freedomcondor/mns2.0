<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="200.0" ticks_per_second="5" random_seed="92" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
     <!-- Pi-Puck Controller -->
    <lua_controller id="pipuck">
      <actuators>
        <debug implementation="default">
          <interface id="draw" />
        </debug>
        <pipuck_differential_drive implementation="default" />
        <!--wifi implementation="default" /-->
      </actuators>
      <sensors>
        <pipuck_differential_drive implementation="default" />
        <pipuck_system implementation="default" />
        <pipuck_rangefinders implementation="default" show_rays="false" />
        <!--wifi implementation="default" show_rays="false" /-->
      </sensors>
      <params script="/Users/harry/Desktop/mns2.0/build/experiment/data/05_displace_mns_drone_45/pipuck.lua" />
    </lua_controller>

     <!-- Drone Controller -->
    <lua_controller id="drone">
      <actuators>
        <debug implementation="default">
          <interface id="draw" />
          <interface id="loop_functions" />
        </debug>
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <drone_system implementation="default" />
        <drone_cameras_system implementation="default" show_frustum="false" show_tag_rays="false" />
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </sensors>
      <params script="/Users/harry/Desktop/mns2.0/build/experiment/data/05_displace_mns_drone_45/drone.lua" />
    </lua_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="30, 10, 2.5" center="0, 0, 1">
    <floor id="floor" source="loop_functions" pixels_per_meter="1" />

    <!-- add drones -->
    <!--
    <drone id="drone1">
      <body position="0,-0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>
    -->

    <distribute>
      <position method="grid" center="-0.10,1,0" distances="1.0,0.5,0"
                layout="15,1,1" />
      <orientation method="grid" center="0,0,0" distances="0,0,0"
                   layout="15,1,1" />
      <entity quantity="15" base_num="1" max_trials="20">
        <drone id="drone">
          <!--body position="0,0,0" orientation="0,0,0"/-->
          <controller config="drone"/>
        </drone>
      </entity>
    </distribute>

    <distribute>
      <position method="grid" center="0,0,0" distances="1.0,0.5,0"
                layout="15,1,1" />
      <orientation method="grid" center="0,0,0" distances="0,0,0"
                   layout="15,1,1" />
      <entity quantity="15" base_num="16" max_trials="20">
        <drone id="drone">
          <!--body position="0,0,0" orientation="0,0,0"/-->
          <controller config="drone"/>
        </drone>
      </entity>
    </distribute>

    <distribute>
      <position method="grid" center="-0.10,-1,0" distances="1.0,0.5,0"
                layout="15,1,1" />
      <orientation method="grid" center="0,0,0" distances="0,0,0"
                   layout="15,1,1" />
      <entity quantity="15" base_num="31" max_trials="20">
        <drone id="drone">
          <!--body position="0,0,0" orientation="0,0,0"/-->
          <controller config="drone"/>
        </drone>
      </entity>
    </distribute>


    <!-- add pi-puck robots -->
    <distribute>
      <!--position method="uniform" min="-1.0,-1.0,0" max="1.0,1.0,0" /-->
      <!--orientation method="uniform" min="0,0,0" max="360,0,0" /-->
      <position method="grid" center="0,0,0" distances="0.5,0.5,0"
                layout="32,8,1" />
      <orientation method="grid" center="0,0,0" distances="0,0,0"
                   layout="32,8,1" />
      <entity quantity="256" base_num="1" max_trials="100">
        <pipuck id="pipuck" tag_medium="tags">
          <controller config="pipuck"/>
        </pipuck>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
    <dynamics3d id="dyn3d" iterations="25" default_friction="0.3">
      <gravity g="9.8" />
      <floor friction="1.0" />
      <virtual_magnetism />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="/Users/harry/Desktop/mns2.0/build/libvns_loop_functions_05_displace_drone_45"
                  label="vns_loop_functions_05_displace_drone_45"/>

