<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="12345" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
     <!-- Pi-Puck Controller -->
    <lua_controller id="pipuck">
      <actuators>
        <debug implementation="default">
          <interface id="draw" />
        </debug>
        <pipuck_differential_drive implementation="default" />
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <pipuck_differential_drive implementation="default" />
        <pipuck_system implementation="default" />
        <pipuck_rangefinders implementation="default" show_rays="false" />
        <wifi implementation="default" show_rays="false" />
      </sensors>
      <params script="@CMAKE_CURRENT_BINARY_DIR@/pipuck.lua"
              driver_default_speed="0.05"
      />
    </lua_controller>

     <!-- Drone Controller -->
    <lua_controller id="drone">
      <actuators>
        <debug implementation="default">
          <interface id="draw" />
        </debug>
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <drone_system implementation="default" />
        <drone_cameras_system implementation="default" show_frustum="false" show_tag_rays="false" />
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </sensors>
      <params script="@CMAKE_CURRENT_BINARY_DIR@/drone.lua"
              dangerzone_drone="0.7"
              driver_default_speed="0.03"
              drone_label_from="1"
              drone_label_to="50"
              pipuck_label_from="1000"
              pipuck_label_to="1005"
              safezone_drone_drone="5"
      />
    </lua_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="20, 10, 10.0" center="0, 0, 1">
    <floor id="floor" source="loop_functions" pixels_per_meter="1" />

    <!-- add drones -->
    <distribute>
      <position method="uniform" min="-4.0,-2.0,0" max="-2.0,2.0,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="12" base_num="1" max_trials="100">
        <drone id="drone">
            <controller config="drone" />
        </drone>
      </entity>
    </distribute>

    <!-- add pi-pucks -->
    <distribute>
      <position method="grid" center="3,3,0" distances="2.0,2.0,0"
                layout="2,2,1" />
      <orientation method="grid" center="0,0,0" distances="0,0,0"
                   layout="2,2,1" />
      <!--position method="uniform" min="-0.5,-0.5,0" max="0.5,0.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" /-->
      <entity quantity="0" base_num="1001" max_trials="100">
        <pipuck id="pipuck"  wifi_medium="wifi" tag_medium="tags">
          <controller config="pipuck"/>
        </pipuck>
      </entity>
    </distribute>

    <!-- add obstacles -->
    <prototype id="hull" movable="false">
      <body position="0,0,1" orientation="0,-10,10" />
      <links ref="bottom">
        <link id="bottom" geometry="box" mass="1" position="0,0,0" orientation="0,0,0" size="0.3, 5.0, 0.3"/>
        <link id="up"     geometry="box" mass="1" position="0,0,2" orientation="0,0,0" size="0.3, 5.0, 0.3"/>
        <link id="left"   geometry="box" mass="1" position="0,-2.35,0" orientation="0,0,0" size="0.3, 0.3, 2.0 - 0.3"/>
        <link id="right"  geometry="box" mass="1" position="0,2.35,0" orientation="0,0,0" size="0.3, 0.3, 2.0 - 0.3"/>
      </links>
      <joints>
        <joint id="bottom_up" type="fixed">
          <parent link="bottom" position="0,0,2" orientation="0,0,0"/>
          <child  link="up"     position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="bottom_left" type="fixed">
          <parent link="bottom" position="0,-2.35,0" orientation="0,0,0"/>
          <child  link="left"   position="0,0,0" orientation="0,0,0"/>
        </joint>
        <joint id="bottom_right" type="fixed">
          <parent link="bottom" position="0,2.35,0" orientation="0,0,0"/>
          <child  link="right"  position="0,0,0" orientation="0,0,0"/>
        </joint>
      </joints>
      <devices>
        <tags medium="tags">
          <tag anchor="bottom" observable_angle="75" side_length="0.02" payload="0"
               position="0,0,0.35" orientation="0,0,0" />
        </tags>
		  </devices>
    </prototype>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
    <dynamics3d id="dyn3d" iterations="25" default_friction="0.3">
      <gravity g="9.8" />
      <floor friction="10.0" />
      <virtual_magnetism />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/libvns_loop_functions"
                  label="vns_loop_functions"/>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="true" show_boundary="false">
		  <user_functions library="@CMAKE_BINARY_DIR@/libbuilderbot_qtopengl_user_functions"
                      label="builderbot_qtopengl_user_functions" >
      </user_functions>
      <camera>
        <placements>
          <placement index="0" position="  0,  0, 20"  look_at="0,0,10"   lens_focal_length="50" up="1,0,0"/>
          <placement index="1" position="  0,-15, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="2" position=" 15,-15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="3" position=" 15,  0, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="4" position=" 15, 15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="5" position="  0, 15, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="6" position="-15, 15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="7" position="-15,  0, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="8" position="-15,-15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
        </placements>
      </camera>
    </qt-opengl>
  </visualization>


</argos-configuration>
