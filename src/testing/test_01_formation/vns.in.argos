<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="12345" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <!-- Pi-Puck Controller -->
    <lua_controller id="pipuck">
      <actuators>
        <pipuck_differential_drive implementation="default" />
        <pipuck_leds implementation="default" />
        <debug implementation="default" />
        <radios implementation="default" />
      </actuators>
      <sensors>
        <pipuck_system implementation="default" />
        <radios implementation="default" />
      </sensors>
      <params script="@CMAKE_CURRENT_BINARY_DIR@/pipuck.lua"
              connector_waiting_count="5"
              connector_waiting_parent_count="7"
              connector_unseen_count="10"
              obstacle_unseen_count="10"
              dangerzone_pipuck="0.50"
      />
    </lua_controller>

    <!-- Drone Controller -->
    <lua_controller id="drone">
      <actuators>
        <debug implementation="default" />
        <drone_flight_system implementation="default" />
        <drone_leds implementation="default" />
        <radios implementation="default" />
      </actuators>
      <sensors>
        <drone_system implementation="default" />
        <drone_cameras_system implementation="default" show_frustum="false" show_tag_rays="false" />
        <drone_flight_system implementation="default" />
        <radios implementation="default" />
      </sensors>
      <params script="@CMAKE_CURRENT_BINARY_DIR@/drone.lua"
              drone_tag_detection_rate="0.50"
              connector_waiting_count="5"
              connector_waiting_parent_count="7"
              connector_unseen_count="10"
              obstacle_unseen_count="10"
              dangerzone_pipuck="0.50"
      />
    </lua_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 2.5" center="0, 0, 1">
    <floor id="floor" source="loop_functions" pixels_per_meter="1" />

    <!-- add drones -->
    <drone id="drone1" wifi_medium="wifi" tag_medium="tags">
      <body position="0,-0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone2" wifi_medium="wifi" tag_medium="tags">
      <body position="-1,-0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone3" wifi_medium="wifi" tag_medium="tags">
      <body position="-2,-0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone4" wifi_medium="wifi" tag_medium="tags">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone5" wifi_medium="wifi" tag_medium="tags">
      <body position="-1,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>
    <drone id="drone6" wifi_medium="wifi" tag_medium="tags">
      <body position="-2,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <!-- add pi-puck robots -->
    <distribute>
      <position method="uniform" min="-2.5,-1.5,0" max="0.5,0.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="14" base_num="1" max_trials="100">
        <pipuck_ext id="pipuck"  wifi_medium="wifi" tag_medium="tags">
          <controller config="pipuck"/>
        </pipuck_ext>
      </entity>
    </distribute>

    <!-- add an obstacle as stabilizer -->
    <prototype id="obstacle1" movable="true" friction="10">
      <body position="0,0,0" orientation="0,0,0" />
      <links ref="base">
        <link id="base" geometry="cylinder" radius="0.10" height="0.1" mass="0.01"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <tags medium="tags">
          <tag anchor="base" observable_angle="75" side_length="0.1078" payload="0"
               position="0,0.000,0.11" orientation="0,0,0" />
        </tags>
      </devices>
    </prototype>

    <prototype id="obstacle2" movable="true" friction="10">
      <body position="-1.5,1,0" orientation="0,0,0" />
      <links ref="base">
        <link id="base" geometry="cylinder" radius="0.10" height="0.1" mass="0.01"
              position="0,0,0" orientation="0,0,0" />
      </links>
      <devices>
        <tags medium="tags">
          <tag anchor="base" observable_angle="75" side_length="0.1078" payload="0"
               position="0,0.000,0.11" orientation="0,0,0" />
        </tags>
      </devices>
    </prototype>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
    <dynamics3d id="dyn3d" iterations="25">
      <gravity g="9.8" />
      <floor />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/libmy_extensions"
                  label="my_loop_functions" />

  <!-- ****************** -->
  <!-- * Visualization  * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="true" show_boundary="false">
      <user_functions library="@CMAKE_BINARY_DIR@/libmy_qtopengl_extensions"
                      label="my_qtopengl_user_functions" />
      <camera>
        <placements>
          <placement index="0" position="  0,  0, 20"  look_at="0,0,10"   lens_focal_length="50" up="1,0,0"/>
          <placement index="1" position="  0,-15, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="2" position=" 15,-15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="3" position=" 15,  0, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="4" position=" 15, 15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="5" position="  0, 15, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="6" position="-15, 15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
          <placement index="7" position="-15,  0, 7.5" look_at="0,0,0.25" lens_focal_length="60" />
          <placement index="8" position="-15,-15, 10"  look_at="0,0,0.25" lens_focal_length="90" />
        </placements>
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
